<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PenyakitHawar">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/nama3"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="56dp"
                android:gravity="center_horizontal"
                android:scrollbars="vertical"
                android:text="HAWAR DAUN BAKTERI"
                android:textColor="#f000"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="312dp"
                android:layout_height="274dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:src="@drawable/hawar" />

            <TextView
                android:id="@+id/sebab3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Penyebab : \nBakteriÂ Xanthomonas campestris pv oryzae.\n"
                android:textColor="#f000"
                android:layout_marginTop="56dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/ciri3"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:scrollbars="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Ciri-Ciri Hawar Daun pada Padi\n\n1. Tepi daun padi muncul bercak\n2. Daun padi berubah menjadi kering\n3. Batang padi mengering\n4. padi mulai layu dan mati"
                android:textColor="#f000"
                android:textSize="18sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:text="CARA PENGENDALIAN"
                android:background="#66BD1A"
                android:textColor="#EFE6E6"
                android:textSize="18sp"
                android:onClick="Kendali"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>