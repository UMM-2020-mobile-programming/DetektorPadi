<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/background_news"
    android:layout_height="match_parent"
    tools:context=".mainConsult">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:paddingBottom="50dp"
        android:text="Silahkan Konsultasikan Masalah Pertanian Anda"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"

        android:gravity="center_horizontal" />

    <ImageView
        android:layout_width="343dp"
        android:layout_height="233dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:src="@drawable/iconconsult"
        android:paddingLeft="10sp"
        android:layout_marginTop="10dp"
        android:paddingBottom="50dp"
        android:outlineAmbientShadowColor="#00FFFF"
        />
    <Button
        android:layout_margin="5dp"
        android:id="@+id/bt_PetunjukPenggunaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_register"
        android:text="Petunjuk Penggunaan Fitur" />

    <Button
        android:layout_margin="5dp"
        android:id="@+id/mulai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_register"
        android:text="Mulai Konsultasi" />


</LinearLayout>