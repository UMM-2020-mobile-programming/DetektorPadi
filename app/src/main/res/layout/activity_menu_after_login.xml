<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_potrait"
    tools:context=".MenuAfterLogin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dftr_penyakit"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_marginVertical="418dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/button_daftar_penyakit" />

            <ImageView
                android:id="@+id/scanner_padi"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_marginVertical="418dp"
                android:layout_marginLeft="-65dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/button_scanner_padi" />

            <ImageView
                android:id="@+id/konsultasi"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_marginVertical="418dp"
                android:layout_marginLeft="-65dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/button_konsultasi" />

            <ImageView
                android:id="@+id/ttg_program"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_marginVertical="550dp"
                android:layout_marginLeft="-411dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/button_tentang_program" />

            <ImageView
                android:id="@+id/rekap_data"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_marginVertical="550dp"
                android:layout_marginLeft="-65dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/button_rekap_data" />

            <ImageView
                android:id="@+id/berita"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_marginVertical="550dp"
                android:layout_marginLeft="-65dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/button_news" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>