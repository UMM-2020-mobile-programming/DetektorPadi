<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/animation"
    android:orientation="vertical"
    tools:context=".PetunjukKonsultasi"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:layout_gravity="center"
                android:paddingBottom="50dp"
                android:text="HALAMAN PETUNJUK FITUR KONSULTASI"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <ImageView
                android:layout_width="343dp"
                android:layout_height="233dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:src="@drawable/iconpetunjuk"
                android:paddingLeft="10sp"
                android:layout_marginTop="10dp"
                android:paddingBottom="50dp"
                android:outlineAmbientShadowColor="#00FFFF"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:scrollbars="vertical"
                android:textStyle="italic"
                android:text="1.Pertama\n"
                android:textColor="#f000"
                android:textSize="15dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:scrollbars="vertical"
                android:text="Silahkan menekan tombol 'mulai konsultasi'\n"
                android:textColor="#f000"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:scrollbars="vertical"
                android:text="2. Kedua\n"
                android:textStyle="italic"
                android:textColor="#f000"
                android:textSize="15dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:scrollbars="vertical"
                android:text="Setelah menekan tombol 'mulai konsultasi' akan muncul beberapa pertanyaan yang cukup Anda jawab dengan IYA atau TIDAK sesuai kondisi tanaman padi Anda\n"
                android:textColor="#f000"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:scrollbars="vertical"
                android:text="3. Ketiga\n"
                android:textStyle="italic"
                android:textColor="#f000"
                android:textSize="15dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:scrollbars="vertical"
                android:text="Ketika anda menekan IYA beberapa pertanyaan maka Anda perlu menekan tombol 'Detail' pada dialog yang muncul untuk diarahkan ke halaman detail penyakit dan cara pengendaliannya"
                android:textColor="#f000"
                android:layout_marginBottom="50dp"
                android:textSize="15dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>